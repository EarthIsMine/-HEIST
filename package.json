{
  "name": "heist",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n be,fe -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w packages/backend",
    "dev:frontend": "npm run dev -w packages/frontend",
    "build": "npm run build --workspaces --if-present",
    "typecheck": "tsc --build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.7.0"
  }
}
